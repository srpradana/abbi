<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_belajar_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BelajarMenuFragment"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_bisindo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="30dp"
        android:clickable="true"
        app:cardCornerRadius="15dp"
        android:focusable="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_bisindo">

            <TextView
                android:id="@+id/tv_title_bisindo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="8dp"
                android:textStyle="bold"
                android:textSize="26sp"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="BISINDO"/>

            <TextView
                android:id="@+id/tv_desc_bisindo"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="20dp"
                android:textSize="14sp"
                android:text="Mengenal Bahasa Isyarat Melalui Flashcard"
                app:layout_constraintTop_toBottomOf="@id/tv_title_bisindo"
                app:layout_constraintStart_toStartOf="parent"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/bisindo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/tv_desc_bisindo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_sibi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="15dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_menu_berlatih">

            <TextView
                android:id="@+id/tv_title_sibi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="8dp"
                android:textStyle="bold"
                android:textSize="26sp"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="SIBI"/>

            <TextView
                android:id="@+id/tv_desc_sibi"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:paddingStart="20dp"
                android:paddingBottom="20dp"
                android:paddingEnd="20dp"
                android:textSize="14sp"
                android:text="Berlatih Dengan Menebak Huruf dan Gambar"
                app:layout_constraintTop_toBottomOf="@id/tv_title_sibi"
                app:layout_constraintStart_toStartOf="parent"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                app:layout_constraintStart_toEndOf="@id/tv_desc_sibi"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/sibi"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>